{
  "name": "posties",
  "version": "1.0.0",
  "description": "Posti.es",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/antontrollback/posties"
  },
  "engines": {
    "node": "0.10.x"
  },
  "scripts": {
    "setup": "npm install; bower install --allow-root; grunt build",
    "build": "grunt build",
    "watch": "grunt watch",
    "buildcompress": "grunt buildcompress",
    "deploybackend": "git push heroku master",
    "deploy": "REV=\"$(date +%s)\"; npm run deploybackend; npm run buildcompress; node app/deploy.js $REV; heroku config:set REVISION=$REV; grunt build"
  },
  "dependencies": {
    "body-parser": "^1.10.2",
    "bower": "^1.3.12",
    "compression": "^1.3.0",
    "connect-redis": "^2.2.0",
    "express": "~4.10.x",
    "express-handlebars": "^2.0.0",
    "express-session": "^1.10.1",
    "habitat": "^3.1.2",
    "html-minifier": "^0.7.2",
    "lodash": "^2.4.1",
    "method-override": "^2.3.1",
    "mustache-express": "^1.2.1",
    "normalize.css": "^3.0.2",
    "pg": "^4.3.0",
    "pg-query": "^0.11.0",
    "redis-url": "^1.1.0",
    "serve-favicon": "^2.2.0",
    "validator": "^3.32.0"
  },
  "devDependencies": {
    "aws-sdk": "^2.1.7",
    "grunt": "^0.4.5",
    "grunt-contrib-concat": "^0.5.1",
    "grunt-contrib-jshint": "^0.11.1",
    "grunt-contrib-uglify": "^0.8.0",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-cssnext": "^1.0.0",
    "grunt-ng-annotate": "^0.10.0",
    "load-grunt-tasks": "^3.1.0",
    "mime": "^1.2.11"
  }
}
